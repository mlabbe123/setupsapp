div(class="fullwidth-wrapper orange")
    div.content-wrapper
        div.breadcrumbs-wrapper
            a(href="#/", class="link breadcrumbs-item") Home
            span(class="breadcrumbs-item current") {{ sim_name }}

div(class="fullwidth-wrapper ac")

div(class="fullwidth-wrapper white padded")
    div.content-wrapper
        div.setupList-filters-wrapper
            div.form-block
                label(for="filter-car", class="label-block") Car
                select(id="filter-car" ,ng-model="filter_query.car", ng-options="car_filters for car_filters in setup_filters.car_filters")
                    option(value="") - Every cars -

            div.form-block
                label(for="filter-track", class="label-block") Track
                select(id="filter-track", ng-model="filter_query.track", ng-options="track_filters for track_filters in setup_filters.track_filters")
                    option(value="") - Every tracks -

            div.form-block
                label(for="filter-author", class="label-block") Author
                input(id="filter-author", type="text", placeholder="Enter an author", ng-model="filter_query.author")

            div.form-block
                label(for="filter-type", class="label-block") Trim
                div(id="filter-type", ng-repeat="type_filter in setup_filters.type_filters")
                    label(for="type_{{ type_filter.label }}", class="label-inline filter-selectable-element", ng-click="selectItem($event)") {{ type_filter.label }}
                    input(type="radio", name="type" id="type_{{ type_filter.label }}", value="{{ type_filter.value }}", ng-model="$parent.filter_query.type", class="is-hidden")

        div.setupList-setups-wrapper
            table.setupList-setups-table
                tr
                    th Actions
                    th Car
                    th Track
                    th Author
                    th Type

                tr(ng-repeat="setup in setups | filter:{ car:filter_query.car||undefined, track:filter_query.track||undefined, author:filter_query.author, type:filter_query.type||undefined } | orderBy:'author'")
                    td
                        a(href="setup_files/{{ simId }}/{{ setup.file_name }}", class="link icon-download") download
                        span |
                        a(href="#/setups/{{ sim_name }}/{{ setup._id }}/", class="link icon-details") See details
                    td {{ setup.car }}
                    td {{ setup.track }}
                    td {{ setup.author }}
                    td {{ setup.type }}