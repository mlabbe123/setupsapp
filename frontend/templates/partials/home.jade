div(class="fullwidth-wrapper clear border-top")
    div.homepage-stats-col-wrapper.orange
        h2.title--small.icon-cup Hall of Fame

        div.homepage-stats-col
            h2.homepage-stats-title / Most active user
            span.homepage-stats-content {{ user_stats.user_with_most_setups_ever }}

        div.homepage-stats-col
            h2.homepage-stats-title / Most downloaded user
            span.homepage-stats-content {{ user_stats.user_with_most_downloads_ever }}

    div.homepage-stats-col-wrapper.orange_alt1
        h2.title--small.icon-stats Market stats

        div.homepage-stats-col
            h2.homepage-stats-title / Setup count
            span.homepage-stats-content {{ user_stats.setups_count }}

        div.homepage-stats-col
            h2.homepage-stats-title / Downloads count
            span.homepage-stats-content {{ user_stats.setups_downloads_total }}

